<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sust.game"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sust.game.FirstActivity"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sust.game.MenuActivity"
            android:label="M E N U"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.sust.game.Game"
            android:label="Kill The Zombies"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.sust.game.Blood"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>

        <activity
            android:name="com.sust.game.GameOverActivity"
            android:label="Game Over"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.sust.game.AboutActivity"
            android:label="About"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.sust.game.MenuActivityTest"
            android:label="Menu" >
        </activity>
      
        <activity
            android:name="com.sust.game.HighScore"
            android:label="High Score"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.sust.game.Instruction"
            android:label="Instruction" >
        </activity>
        <activity
            android:name="com.sust.game.GameInstruction"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_game_instruction"
            android:theme="@style/FullscreenTheme" >
        </activity>
    </application>

</manifest>